extends ../layout

block content

    - if (currentUser && currentUser.admin) {
    div(class="bs-docs-section")
        div(class="row")
            a(href='/admin/menu') Admin Menu
    - }

    h1 My Projects list

    -if (projects) {

        div(class="bs-docs-section")
            div(class="row")
                div(class="col-lg-12")
                    div(class="bs-component")
                        table(class="table table-striped table-hover ")
                            thead
                                tr
                                    th Projec Name
                                    th Total Spend Time
                            tbody
                                each project in projects
                                    -var spendTime = project.spendTime;
                                    -if (!spendTime) spendTime = 0;

                                    tr
                                        td
                                            a(href='/projects/details/#{project._id}') #{project.name}
                                        td #{spendTime) h


    -} else {
        h3 No projects yet
    -}

    form(action='/projects/create', method="get")
        input(type="submit", class="btn btn-primary", value='Create project')
